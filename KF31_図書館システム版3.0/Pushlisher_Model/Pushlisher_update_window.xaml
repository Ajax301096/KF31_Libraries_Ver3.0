<Window x:Class="KF31_図書館システム版3._0.Pushlisher_Model.Pushlisher_update_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KF31_図書館システム版3._0.Pushlisher_Model"
                    mc:Ignorable="d"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:uc="clr-namespace:KF31_図書館システム版3._0.UserControl_KF31"
   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
   TextElement.Foreground="{DynamicResource MaterialDesignBody}"
   TextElement.FontSize="13"
   TextOptions.TextFormattingMode="Ideal"
   TextOptions.TextRenderingMode="Auto"
   WindowStartupLocation="CenterScreen"
   ResizeMode="NoResize"
   WindowStyle="None"      
   Background="{DynamicResource MaterialDesignPaper}"
   FontFamily="{DynamicResource MaterialDesignFont}"
        
        DataContext="{StaticResource PushlisherViewModel }"
        Name="Uopdate"
        Title="出版社更新" Height="510" Width="800"
        >
    <Grid Background="#F2F2F2" Margin="0,0,-6.667,-4.333" HorizontalAlignment="Left" Width="798">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"  Background="#c7816f">
            <uc:Hamburger_Control Tag="{Binding Title,ElementName=Uopdate}"></uc:Hamburger_Control>
        </Grid>
        <Grid Grid.Row="1"  Margin="0,40,0,0" Background="#e6e1dd"  VerticalAlignment="Top" HorizontalAlignment="Center" Width="724" RenderTransformOrigin="0.5,0.5" Height="359" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="出版社更新" Foreground="#4c6462" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                <Button  BorderBrush="#b0816f" Background="#b0816f" Width="79" FontSize="16" HorizontalAlignment="Right" Margin="0,0,30,0"
              Command="{Binding BackPushlisherCommand}" CommandParameter="{Binding ElementName=Uopdate}">戻る</Button>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock  Grid.Row="0" Width="200" Height="36" TextAlignment="Center"  Foreground="#2a3837" Background="#cad2c5" HorizontalAlignment="Right" FontSize="20" VerticalAlignment="Center" Padding="0,6,0,0" Text="出版社ID"></TextBlock>
                    <TextBlock  Grid.Row="1" Width="200" Height="36" TextAlignment="Center"  Foreground="#2a3837" Background="#cad2c5" HorizontalAlignment="Right" FontSize="20" VerticalAlignment="Center" Padding="0,6,0,0" Text="出版社名"></TextBlock>
                    <TextBlock  Grid.Row="2" Width="200" Height="36" TextAlignment="Center"  Foreground="#2a3837" Background="#cad2c5" HorizontalAlignment="Right" FontSize="20" VerticalAlignment="Center" Padding="0,6,0,0" Text="メールアドレス"></TextBlock>
                    <TextBlock  Grid.Row="3" Width="200" Height="36" TextAlignment="Center"  Foreground="#2a3837" Background="#cad2c5" HorizontalAlignment="Right" FontSize="20" VerticalAlignment="Center" Padding="0,6,0,0" Text="電話番号"></TextBlock>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <ComboBox Grid.Row="0" HorizontalAlignment="Left" Background="#eee" Width="250" Height="36" Margin="20,0,0,0"
                             DisplayMemberPath="PublisherID" ItemsSource="{Binding Pushlisher}" SelectedItem="{Binding Select_PusID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              materialDesign:HintAssist.Hint="出版ID" />

                    <TextBox TabIndex="1" Grid.Row="1" Width="250" Height="36" HorizontalAlignment="Left" Margin="20,0,0,0" Foreground="#2a3837" Background="#eee"
                       materialDesign:HintAssist.Hint="出版社名"  Text="{Binding PublisherName, UpdateSourceTrigger=PropertyChanged}">
                    </TextBox>
                    <TextBox TabIndex="2" Grid.Row="2" Width="250" Height="36" HorizontalAlignment="Left" Margin="20,0,0,0" Foreground="#2a3837" Background="#eee"
                       materialDesign:HintAssist.Hint="メールアドレス"  Text="{Binding Publisher_email, UpdateSourceTrigger=PropertyChanged}">
                    </TextBox>
                    <TextBox TabIndex="3" Grid.Row="3" Width="250" Height="36" HorizontalAlignment="Left" Margin="20,0,0,0" Foreground="#2a3837" Background="#eee"
   materialDesign:HintAssist.Hint="電話番号"  Text="{Binding Publisher_Phone, UpdateSourceTrigger=PropertyChanged}">
                    </TextBox>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <Button  BorderBrush="#b0816f" Background="#b0816f" Width="90" Height="40" FontSize="16" HorizontalAlignment="Center" Margin="0,0,30,0"
         Command="{Binding Update_PushlisherCommand}" CommandParameter="{Binding ElementName=Uopdate}" Content="更新"></Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Background="#99b9a4" Height="51"/>


    </Grid>
</Window>